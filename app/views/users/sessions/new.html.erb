<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="jumbotron">
      <div class="container">
        <h2 class="text-center">Iniciar Sesi√≥n</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row">
              <%= f.label :email, class:"col-md-4 col-form-label text-right space-label-right" %><br />
              <%= f.email_field :email, autofocus: true, class:"col-md-4 form-control" %>
            </div>

            <div class="form-group row">
              <%= f.label :password, class:"col-md-4 col-form-label text-right space-label-right" %><br />
              <%= f.password_field :password, autocomplete: "off", class:"col-md-4 form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group row">
                <div class="offset-md-4 col-md-4">
                  <%= f.check_box :remember_me, class:"col-form-label" %>
                  <%= f.label :remember_me, class:"col-form-label" %>
                </div>
              </div>
            <% end -%>

            <div class="form-group row">
              <div class="col-md-4 offset-md-4">
                <%= f.submit "Log in", class:"btn btn-info btn-block" %>
                <%= render "users/shared/links" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
