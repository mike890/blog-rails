<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="jumbotron">
      <div class="container">
        <h2 class="text-center">Registrarse</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group row">
              <%= f.label :email, class:"col-md-4 col-form-label text-right space-label-right" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group row">
              <%= f.label :password, class:"col-md-4 col-form-label text-right space-label-right" %>
              <%= f.password_field :password, autocomplete: "off", class:"col-md-4 form-control" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class:"col-md-4 col-form-label text-right space-label-right" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"col-md-4 form-control" %>
            </div>

            <div class="form-group row">
              <div class="col-md-2 offset-md-4">
                <%= f.submit "Sign up", class:"btn btn-info btn-center" %> <br />  
              </div>
              <div class="col-md-2 ">
                <%= render "users/shared/links" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

