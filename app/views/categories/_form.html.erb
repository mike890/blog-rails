<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <fieldset>
            <h1 class="text-center"><%= "#{title} categoria"%></h1>
            <%= form_for(category, local: true) do |f| %>
              <% if category.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

                  <ul>
                  <% category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group row">
                <%= f.label :name, class:"col-md-4 col-form-label text-right" %>
                <%= f.text_field :name, class:"col-md-4 form-control" %>
              </div>

              <div class="form-group row">
                <%= f.label :color, class:"col-md-4 col-form-label text-right" %>
                <%= f.color_field :color, class:"col-md-4 form-control" %>
              </div>
              <div class="form-group row">
              <%= f.label "Imagen", class:"col-md-4 col-form-label text-right"%>
              <%= f.file_field :cat_img, class:"col-md-4 form-control" %>
            </div>  

              <div class="form-group row">
                <%= f.submit "Aceptar", class:"btn btn-info col-md-2 offset-md-4" %>                
                <%= link_to 'Atras', categories_path, class:"btn btn-info col-md-2 offset-md-1" %>
              </div>
            <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</div>  
